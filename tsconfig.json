{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "module": "CommonJS",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
